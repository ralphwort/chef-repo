<h1>Listing nodes</h1>

<table>
  <thead>
    <tr>
      <th>Openstack user</th>
      <th>Name</th>
      <th>Recipe</th>
      <th>Apps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.openstack_user_id %></td>
        <td><%= node.name %></td>
        <td><%= node.recipe %></td>
        <td><%= node.apps %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= form_tag("/openstack_actions/start", method: "get") do %>
            <%= collection_select(:flavors, :flavors, Flavor.all, :flavor_id, :name) %>
            <%= collection_select(:images, :images, Image.all, :image_id, :name) %>
            <%= hidden_field_tag 'openstack_user', node.openstack_user_id %>
            <%= hidden_field_tag 'recipe', node.recipe %>
            <%= hidden_field_tag 'node', node.name %>
            <%= hidden_field_tag 'apps', node.apps %>
            <%= hidden_field_tag 'name', node.name %>
            <%= submit_tag("Start Instance") %>
          <%  end %>
        </td>
        <td>
          <%= form_tag("/openstack_actions/chef_start", method: "get") do %>
            <%= hidden_field_tag 'openstack_user', node.openstack_user_id %>
            <%= hidden_field_tag 'recipe', node.recipe %>
            <%= hidden_field_tag 'node', node.name %>
            <%= hidden_field_tag 'apps', node.apps %>
            <%= hidden_field_tag 'name', node.name %>
            <%= submit_tag("Boostrap Instance") %>
          <%  end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_node_path %>
