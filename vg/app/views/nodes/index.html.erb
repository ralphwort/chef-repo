<h1>Listing nodes</h1>

<table>
  <thead>
    <tr>
      <th>Openstack user</th>
      <th>Name</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.openstack_user_id %></td>
        <td><%= node.name %></td>
        <td><%= node.recipe %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Start Server', openstack_actions_start_path({:openstack_user => node.openstack_user_id,
          :recipe => node.recipe, :name => node.name}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_node_path %>
